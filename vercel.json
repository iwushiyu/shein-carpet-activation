{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "functions": {
    "api/validate-activation.js": {
      "maxDuration": 10
    },
    "api/generate-codes.js": {
      "maxDuration": 10
    },
    "api/check-activation.js": {
      "maxDuration": 10
    }
  }
}



